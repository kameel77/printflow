# Local Development Environment
# Database (using SQLite for local testing)
DATABASE_URL=sqlite:///./printflow.db

# For Docker/PostgreSQL use:
# DATABASE_URL=postgresql://printflow:changeme@localhost:5432/printflow

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
JWT_SECRET=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480

# Google OAuth (not needed for local dev)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Application
ENVIRONMENT=development
DEBUG=true
BRAND_MODE=both

# Settings
FOLLOW_UP_DAYS=3
MAX_FOLLOW_UPS=2
WEASYPRINT_TIMEOUT=30
