# PrintFlow MIS - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================
# Database Configuration
# =============================================
POSTGRES_USER=printflow
POSTGRES_PASSWORD=change_this_to_strong_password
POSTGRES_DB=printflow
DATABASE_URL=postgresql://printflow:change_this_to_strong_password@postgres:5432/printflow

# =============================================
# Redis Configuration
# =============================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================
# Security & Authentication
# =============================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================
# Gmail API Configuration
# =============================================
# Path inside container where credentials are mounted
GMAIL_CREDENTIALS_PATH=/app/credentials/gmail_credentials.json
GMAIL_TOKEN_PATH=/app/credentials/gmail_token.json

# =============================================
# Application Settings
# =============================================
ENVIRONMENT=production
DEBUG=false

# Multi-brand support: wally | decostrefa | both
BRAND_MODE=both

# Company details (for PDF generation)
COMPANY_NAME=Satto Media
COMPANY_ADDRESS="Your Address"
COMPANY_PHONE="+48 XXX XXX XXX"
COMPANY_EMAIL="biuro@yourdomain.pl"
COMPANY_NIP="XXX-XXX-XX-XX"

# =============================================
# Calculation Engine Settings
# =============================================
# Default follow-up days for quote reminders
FOLLOW_UP_DAYS=3
MAX_FOLLOW_UPS=2

# WeasyPrint PDF generation timeout (seconds)
WEASYPRINT_TIMEOUT=30

# =============================================
# Frontend Configuration
# =============================================
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# =============================================
# Backup Configuration
# =============================================
BACKUP_RETENTION_DAYS=30

# =============================================
# Feature Flags
# =============================================
ENABLE_AI_FEATURES=true
ENABLE_AUDIT_LOGS=true
ENABLE_AUTO_FOLLOWUP=true

# =============================================
# Coolify Specific (if using)
# =============================================
# These will be auto-populated by Coolify
# COOLIFY_CONTAINER_NAME=
# COOLIFY_PROJECT_NAME=
